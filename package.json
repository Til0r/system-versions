{
  "name": "syv",
  "displayName": "system-versions",
  "description": "A Visual Studio Code extension that displays the versions of common development tools installed on your system all inside the Explorer sidebar",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "publisher": "til0r",
  "repository": {
    "type": "git",
    "url": "https://github.com/Til0r/system-versions.git"
  },
  "bugs": {
    "url": "https://github.com/Til0r/system-versions/issues"
  },
  "author": {
    "name": "til0r"
  },
  "license": "MIT",
  "homepage": "https://github.com/Til0r/system-versions/blob/master/README.md",
  "keywords": [
    "system",
    "versions",
    "angular",
    "npm",
    "node",
    "git",
    "python",
    "java"
  ],
  "pricing": "Free",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "syv.refresh",
        "title": "Refresh",
        "alt": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "systemVersionsView",
          "name": "System versions"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "syv.refresh",
          "when": "view == systemVersionsView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && auto-changelog && npm run update-readme",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "prepare": "husky install",
    "update-readme": "node scripts/update-readme.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "husky": "^8.0.0",
    "typescript": "^5.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,json}": [
      "prettier --write"
    ],
    "src/**/*.ts": [
      "eslint"
    ]
  },
  "dependencies": {
    "auto-changelog": "^2.5.0"
  }
}