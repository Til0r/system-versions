{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "outDir": "out",
    "lib": ["ES2022"],
    "sourceMap": true,
    "strict": true /* enable all strict type-checking options */,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
    /* Additional Checks */
